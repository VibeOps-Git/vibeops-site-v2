{
  "version": 2,
  "functions": {
    "api/**": {
      "excludeFiles": "public/**"
    }
  },
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/videos/(.*)",
      "dest": "/public/videos/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}